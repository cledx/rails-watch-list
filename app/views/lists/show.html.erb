<div class="container">

<div class="navbar justify-content-between align-items-center">
    <h1><%= @list.name %></h1>
    <div class="d-flex flex-column">
        <%= link_to 'Add New Movie', new_list_bookmark_path(@list), class: "btn btn-primary" %>
        <%= link_to 'Delete List', list_path(@list), data:{turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
    </div>
</div>

<% @bookmarks.each do |bookmark| %>
<ul>
    <li>
        <%= image_tag bookmark.movie.poster_url, height: 150 %><%= bookmark.movie.title %> - <%= bookmark.comment %> 
        <%= link_to '(D)', bookmark_path(bookmark), data:{turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
</ul>
<% end %>

<%= link_to 'List Index', lists_path %>

</div>